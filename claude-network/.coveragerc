# Coverage.py configuration file

[run]
branch = True
source = .
parallel = True
concurrency = multiprocessing

omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */fixtures/*
    setup.py
    */migrations/*
    */venv/*
    */virtualenv/*
    */.venv/*
    */dist/*
    */build/*
    */.tox/*
    */htmlcov/*
    */.pytest_cache/*
    */.git/*

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if __name__ == "__main__":

    # Don't complain about type checking code
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

    # Don't complain about abstract methods
    @abstract
    @abc.abstractmethod
    pass

    # Don't complain about defensive programming
    except ImportError:
    except Exception as e:

    # Logging statements
    logging.
    logger.

ignore_errors = True

# Show missing line numbers
show_missing = True

# Precision
precision = 2

# Fail if coverage is below this percentage
fail_under = 80

[html]
directory = htmlcov
title = Sartor Claude Network Coverage Report

[xml]
output = coverage.xml

[json]
output = coverage.json
pretty_print = True