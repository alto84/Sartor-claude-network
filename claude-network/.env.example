# Claude Network Environment Variables
# Copy this file to .env and fill in your values

# REQUIRED: Firebase Configuration
# Your Firebase Realtime Database URL
CLAUDE_FIREBASE_URL=https://your-project-default-rtdb.firebaseio.com

# REQUIRED for Message Signing: Security Configuration
# Generate a secure random string of at least 32 characters
# Example: openssl rand -hex 32
MACS_SHARED_SECRET=your-secret-key-at-least-32-characters-change-this

# Optional: Firebase Authentication (if using auth)
CLAUDE_FIREBASE_API_KEY=your-api-key
CLAUDE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
CLAUDE_FIREBASE_PROJECT_ID=your-project-id

# Optional: Agent Configuration (can also be in config.yaml)
CLAUDE_AGENT_ID=agent-001
CLAUDE_AGENT_NAME=Desktop Mission Control
CLAUDE_AGENT_SURFACE=desktop
CLAUDE_AGENT_SPECIALIZATION=coordination
CLAUDE_AGENT_LOCATION=main-computer
CLAUDE_AGENT_HEARTBEAT=15

# Optional: Network Configuration
CLAUDE_MESSAGE_RETRY=3
CLAUDE_MESSAGE_TIMEOUT=30
CLAUDE_OFFLINE_QUEUE=true

# Optional: Security Settings
CLAUDE_ENABLE_SIGNING=true
CLAUDE_ENABLE_ENCRYPTION=false

# Optional: GitHub Integration
CLAUDE_GITHUB_REPO=https://github.com/username/repo
CLAUDE_GITHUB_TOKEN=ghp_your_token_here

# Optional: Logging
CLAUDE_LOG_LEVEL=INFO
CLAUDE_DEBUG=false