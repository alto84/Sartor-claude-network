{
  "name": "sartor-memory-system",
  "version": "1.0.0",
  "description": "Multi-tier memory storage system using Firebase + GitHub + Vector Database",
  "main": "index.js",
  "scripts": {
    "start": "node services/index.js",
    "dev": "nodemon services/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:memory-system": "ts-node example-usage.ts",
    "test:firestore": "ts-node src/mcp/test-firestore.ts",
    "test:firebase-backends": "ts-node src/mcp/check-firebase-backends.ts",
    "build": "tsc",
    "benchmark": "ts-node scripts/benchmark.ts",
    "demo": "ts-node scripts/demonstrate-self-improvement.ts",
    "mcp": "ts-node src/mcp/memory-server.ts",
    "mcp:http": "ts-node src/mcp/http-server.ts",
    "example:bootstrap": "ts-node examples/bootstrap-mesh-example.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md,ts}\"",
    "sync:hot-cleanup": "node scripts/sync/hot-cleanup.js",
    "sync:warm-eval": "node scripts/sync/warm-evaluation.js",
    "sync:cold-consolidate": "node scripts/consolidate.js",
    "github:consolidate": "node scripts/fetch-from-firestore.js && node scripts/convert-to-markdown.js",
    "github:validate": "node scripts/validate-memories.js",
    "github:index": "node scripts/generate-indexes.js",
    "embeddings:generate": "node scripts/generate-embeddings.js",
    "embeddings:update": "node scripts/update-embeddings.js",
    "deploy:firebase": "firebase deploy --only functions,firestore,database",
    "deploy:github-actions": "gh workflow sync",
    "setup": "npm run setup:firebase && npm run setup:github && npm run setup:vector-db",
    "setup:firebase": "firebase init",
    "setup:github": "gh auth login && gh repo create sartor-memories",
    "setup:vector-db": "node scripts/setup-vector-db.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google-cloud/firestore": "^7.1.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@octokit/rest": "^20.0.2",
    "@pinecone-database/pinecone": "^1.1.2",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8",
    "openai": "^4.20.1",
    "weaviate-client": "^2.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sartor/claude-network.git"
  },
  "keywords": [
    "memory",
    "storage",
    "firebase",
    "github",
    "vector-database",
    "semantic-search",
    "embeddings",
    "multi-tier"
  ],
  "author": "Sartor Team",
  "license": "MIT"
}
